  <body>
    <form action="/api/apply" method="post">
      <div class="form-section">
        <div class="container-apply">
          <p class="name">Apply for Lorem Ipsum</p>
          <!-- <p class="name">Lorem ipsum</p> -->
        </div>
        <div class="container-why">
          <p class="apply-for">Why you fit for this help?</p>
          <textarea
            class="text-form"
            placeholder="Write your opinion..."
            name="areyou"
          ></textarea>
        </div>
        <div class="container-why">
          <p class="apply-for">
            What will be your approach to fulfill this help?
          </p>
          <textarea
            class="text-form"
            placeholder="Write your opinion..."
            name="whatwill"
          ></textarea>
        </div>
        <button type="submit" class="btn-form">Apply</button>
      </div>
    </form>
  </body>
